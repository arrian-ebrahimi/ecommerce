<div class="col-md-8 col-md-offset-2">
  <h1>New Entry</h1>
    <div class="panel panel-default devise-bs">
      <div class="panel-body">
        <%= form_for @code, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
          <div class="form-group">
            <%= f.label :kind %>
            <%= f.select :kind, @kinds %>
          </div>
          <div class="form-group">
            <%= f.label :language %>
            <%= f.select :language, @languages %>
          </div>
          <div class="form-group">
            <%= f.label :purpose %>
            <%= f.email_field :purpose, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.email_field :content, autofocus: true, class: "form-control" %>
          </div>
          <%= f.submit t('.create', :default => "Create"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
</div>
