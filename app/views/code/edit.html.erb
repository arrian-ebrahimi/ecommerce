<div class="col-md-8 col-md-offset-2">
  <h1>Editing Entries</h1>
    <div class="panel panel-default devise-bs">
      <div class="panel-body">
        <%= form_for @code, url: {action: "update"}, method: :put do |f| %>
          <div class="form-group">
            <%= f.label :kind %>
            <%= f.select :kind, @kinds %>
          </div>
          <div class="form-group">
            <%= f.label :language %>
            <%= f.select :language, @languages %>
          </div>
          <div class="form-group">
            <%= f.label :purpose %>
            <%= f.text_field :purpose, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, autofocus: true, class: "form-control" %>
          </div>
          <%= f.submit t('.update', :default => "Update"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
</div>
